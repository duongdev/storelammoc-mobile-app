{
  "expo": {
    "name": "Store Làm Mộc",
    "description": "Hệ thống siêu thị máy móc và dụng cụ làm mộc.",
    "slug": "store-lam-moc",
    "privacy": "unlisted",
    "sdkVersion": "31.0.0",
    "platforms": ["ios", "android"],
    "primaryColor": "#263238",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "splash": {
      "image": "./assets/images/transparent.png",
      "resizeMode": "contain",
      "backgroundColor": "#263238"
    },
    "notification": {
      "icon": "./assets/images/logo.png",
      "color": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "androidStatusBar": {
      "backgroundColor": "#26323800"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.lammoc.store",
      "icon": "./assets/images/logo.ios.png",
      "infoPlist": {
        "NSCameraUsageDescription": "Cho phép Store Làm Mộc sử dụng camera để quét mã vạch/mã QR"
      }
    },
    "android": {
      "package": "com.lammoc.store",
      "icon": "./assets/images/logo.android.png",
      "adaptiveIcon": {
        "backgroundColor": "#263238"
      },
      "permissions": ["CAMERA"]
    },
    "packagerOpts": {
      "assetExts": ["ttf", "mp4", "png"],
      "sourceExts": ["ts", "tsx"],
      "transformer": "node_modules/react-native-typescript-transformer/index.js"
    },
    "extra": {
      "STORE_WEB_URL": "https://storelammoc.vn",
      "API_URL": "https://api.storelammoc.vn"
    }
  }
}
